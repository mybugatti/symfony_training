{% extends 'base.html.twig' %}

{% block body %}
    <h1>Author list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Last_name</th>
                <th>First_name</th>
                <th>Birth_date</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': author.id }) }}">{{ author.id }}</a></td>
                <td>{{ author.lastname }}</td>
                <td>{{ author.firstname }}</td>
                <td>{% if author.birthdate %}{{ author.birthdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if author.createdat %}{{ author.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if author.updatedat %}{{ author.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': author.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': author.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
