{% extends 'base.html.twig' %}

{% block body %}
    <h1>Author</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ author.lastname }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ author.firstname }}</td>
            </tr>
            <tr>
                <th>Birth_date</th>
                <td>{% if author.birthdate %}{{ author.birthdate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{% if author.createdat %}{{ author.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{% if author.updatedat %}{{ author.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('user_edit', { 'id': author.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
